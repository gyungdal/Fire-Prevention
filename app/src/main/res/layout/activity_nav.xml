<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav"
    android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:background="@drawable/side"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:id="@+id/caution"
                android:layout_height="40dp"
                >
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/caution_image"
                    android:layout_width="@dimen/nav_image_size"
                    android:layout_height="@dimen/nav_image_size"
                    android:src="@android:drawable/ic_dialog_email"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/caution_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/status"
                    android:textSize="@dimen/nav_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:id="@+id/status"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/status_image"
                    android:layout_width="@dimen/nav_image_size"
                    android:layout_height="@dimen/nav_image_size"
                    android:src="@android:drawable/ic_dialog_email"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/status_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="알림"
                    android:textSize="@dimen/nav_text_size"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@drawable/top"
                android:layout_width="match_parent"
                android:id="@+id/gotoHome"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/gotoHome_image"
                    android:layout_width="@dimen/nav_image_size"
                    android:layout_height="@dimen/nav_image_size"
                    android:src="@android:drawable/ic_dialog_email"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/gotoHome_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="알림"
                    android:textSize="@dimen/nav_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/top"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:id="@+id/insertOrSelect"
                android:layout_height="40dp"
                android:layout_below="@id/gotoHome">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/insertOrSelect_image"
                    android:layout_width="@dimen/nav_image_size"
                    android:layout_height="@dimen/nav_image_size"
                    android:src="@android:drawable/ic_dialog_email"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/insertOrSelect_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="화재경보기 등록 및 조회"
                    android:textSize="@dimen/nav_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/top"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:id="@+id/machineSetting"
                android:layout_height="40dp"
                android:layout_below="@id/insertOrSelect">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/machineSetting_image"
                    android:layout_width="@dimen/nav_image_size"
                    android:layout_height="@dimen/nav_image_size"
                    android:src="@android:drawable/ic_dialog_email"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/machineSetting_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="화재경보기 관리"
                    android:textSize="@dimen/nav_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bottom_top"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:id="@+id/runWhenFire"
                android:layout_height="40dp"
                android:layout_below="@id/machineSetting">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/runWhenFire_image"
                    android:layout_width="@dimen/nav_image_size"
                    android:layout_height="@dimen/nav_image_size"
                    android:src="@android:drawable/ic_dialog_email"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/runWhenFire_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="화재 시 대피 요령"
                    android:textSize="@dimen/nav_text_size"/>
            </RelativeLayout>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_below="@id/runWhenFire"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/fire"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/nav_circle"
                android:layout_height="@dimen/nav_circle"
                android:background="@android:color/transparent"
                android:src="@drawable/red_circle"
                android:id="@+id/navFireImage"/>

            <TextView
                android:layout_marginTop="@dimen/nav_text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_fire"
                android:textStyle="bold|normal"
                android:textColor="#000" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/nav_circle"
                    android:layout_height="@dimen/nav_circle"
                    android:background="@android:color/transparent"
                    android:src="@drawable/green_circle"
                    android:id="@+id/navSmokeImage"/>

                <TextView
                    android:layout_marginTop="@dimen/nav_text_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_smoke"
                    android:textStyle="bold|normal"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/nav_circle"
                    android:layout_height="@dimen/nav_circle"
                    android:background="@android:color/transparent"
                    android:src="@drawable/gray_circle"
                    android:id="@+id/navTempImage"/>

                <TextView
                    android:layout_marginTop="@dimen/nav_text_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_temp"
                    android:textStyle="bold|normal"
                    android:textColor="#000" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/SOS"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/red_button"
            android:text="긴급 SOS"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
    </LinearLayout>
</ScrollView>